<?xml version="1.0" encoding="utf-8"?>


<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.ac.aber.plantcatalog"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="uk.ac.aber.rpsrrec.ui.LogOnActivity"
            android:label="@string/title_activity_log_on" >
        </activity>
        <activity
            android:name="uk.ac.aber.rpsrrec.ui.VisitActivity"
            android:label="@string/title_activity_visit" >
        </activity>
        <activity
            android:name="uk.ac.aber.rpsrrec.ui.SightingsListActivity"
            android:label="@string/title_activity_sightings_list" >
        </activity>
        <activity
            android:name="uk.ac.aber.rpsrrec.ui.SightingEntryActivity"
            android:label="@string/title_activity_sighting_entry" >
        </activity>
        <activity
            android:name="uk.ac.aber.rpsrrec.ui.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
